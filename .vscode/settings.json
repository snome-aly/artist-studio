{
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": {
    "overrideConfigFile": "./eslint.config.mjs"
  },
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.workingDirectories": [
    {
      "directory": ".",
      "changeProcessCWD": true
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/*.log": true,
    ".next": true,
    "out": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/out": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/artifacts": true,
    "**/cache": true
  },
  "eslint.rules.customizations": [
    {
      "rule": "@typescript-eslint/ban-types",
      "severity": "off"
    },
    {
      "rule": "no-empty-object-type", 
      "severity": "off"
    }
  ]
} 