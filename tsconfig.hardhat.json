{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "contracts/**/*.sol",
    "test/**/*.ts",
    "ignition/**/*.ts",
    "hardhat.config.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "src/**/*", ".next/**/*"]
} 